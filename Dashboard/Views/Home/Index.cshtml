@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8" />
    <title></title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/justgage")
</head>

<body>
    <div class="container">
        <h1>NCC Performance Dashboard</h1>
        <div class="row">
            <div class="col-md-6">
                <div id="visitorsGauge" style="width:100%; height:300px"></div>
                <section id="auth-button" style="text-align:center"></section>
            </div>
            <div class="col-md-6">
                <div id="formsGauge" style="width:100%; height:300px"></div>
                <div style="text-align:center">
                    <p>The last form was</p>
                    <p class="lastForm" style="font-weight:bold;">...</p>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/analytics.js"></script>
    <script src="~/Scripts/dashboard.js"></script>
</body>
</html>